<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
                access="global" controller="FileUploaderCtrl">
    <aura:attribute name="recordDetails" type="Object"/>
    
    <aura:attribute name="fileList" type="List" default="[]"/>
    <aura:attribute name="isGuestUser" type="Boolean"/>
    <aura:attribute name="guestUserId" type="String"/>
    <aura:attribute name="vfOriginUrl" type="String"/>
    <aura:attribute name="documentSource" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <aura:registerEvent name="tc_dealDocsListChange_evt" type="c:tc_dealDocsListChange_evt"/>

    <div class="slds-size_1-of-1">
        <lightning:input type="file" label="" name="file" multiple="false" onchange="{! c.handleFilesChange }"/>
    </div>


    
