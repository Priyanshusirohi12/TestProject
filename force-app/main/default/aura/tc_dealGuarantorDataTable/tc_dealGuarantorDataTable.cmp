<aura:component description="tc_dealGuarantorDataTable">
    <aura:attribute name="guarantors" type="Contact[]" access="global" default="[]"/>

    <table class="slds-table slds-table_bordered slds-max-medium-table_stacked-horizontal slds-no-cell-focus slds-table_fixed-layout">
        <thead>
            <tr class="slds-text-title_caps">
                <th scope="col">
                    <div class="slds-truncate"></div>
                </th>
                <th scope="col">
                    <div class="slds-truncate">First Name</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate">Last Name</div>
                </th>

                <th scope="col">
                    <div class="slds-truncate">Street</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate">City</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate">State</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate">Postal Code</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate">Phone</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate">Email</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate">SSN</div>
                </th>
            </tr>
        </thead>
        <tbody>
            <aura:iteration var="guar" items="{!v.guarantors}" indexVar="i">
                <tr>
                    <th scope="row">
                        <div class="slds-truncate">
                            {!i+1}
                        </div>
                    </th>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputText value="{!guar.FirstName}"/>
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputText value="{!guar.LastName}"/>
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputText value="{!guar.MailingStreet}"/>
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputText value="{!guar.MailingCity}"/>
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputText value="{!guar.MailingStateCode}"/>
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputText value="{!guar.MailingPostalCode}"/>
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputPhone value="{!guar.Phone}"/>
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputEmail value="{!guar.Email}"/>
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate">
                            <ui:outputText value="{!guar.SSN__c}"/>
                        </div>
                    </td>
                </tr>
            </aura:iteration>
        </tbody>
    </table>
</aura:component>